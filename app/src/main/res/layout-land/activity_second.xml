<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A05F5F"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".SecondActivity">


    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="269dp"
        android:layout_marginRight="269dp"
        android:layout_marginBottom="53dp"
        android:background="@color/design_default_color_secondary_variant"
        android:onClick="btnReset"
        android:text="@string/btn_resert_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/teamName"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="TeamA"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/score"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="55sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@color/design_default_color_secondary_variant"
                    android:onClick="btnAdd2"
                    android:text="@string/lable_add2" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_secondary_variant"
                    android:onClick="btnAdd3"
                    android:layout_weight="1"

                    android:text="@string/lable_add3" />

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"

                    android:background="@color/design_default_color_secondary_variant"
                    android:onClick="btnAdd1"
                    android:text="@string/lable_add1" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:background="#000000">

        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamName2"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="TeamB"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="0"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="55sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"

                    android:background="@color/design_default_color_secondary_variant"
                    android:onClick="btnAdd2"
                    android:text="@string/lable_add2" />

                <Button
                    android:id="@+id/btn_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"

                    android:background="@color/design_default_color_secondary_variant"
                    android:onClick="btnAdd1"
                    android:text="@string/lable_add1" />

                <Button
                    android:id="@+id/btn_32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/design_default_color_secondary_variant"
                    android:onClick="btnAdd3"
                    android:text="@string/lable_add3" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>





</RelativeLayout>